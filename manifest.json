{
    "manifest_version": 2,

    "name": "Winamp Cloud",
    "description": "Add urls to your Winamp Cloud collection",
    "version": "0.1",

    "page_action": {
        "default_title": "Winamp Cloud",
        "default_icon": "winamp-cloud.png",
        "default_popup": "popup.html"
    },

    "content_scripts" : [
        {
            "matches" : [
                "http://www.youtube.com/*"
            ],
            "js" : ["content_script.js"],
            "run_at" : "document_idle",
            "all_frames" : false
        }
    ],

    "icons": {
        "16": "winamp-cloud.png",
        "48": "winamp-cloud.png",
       "128": "winamp-cloud.png"
    },

    "permissions": [
        "background",
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }

}
